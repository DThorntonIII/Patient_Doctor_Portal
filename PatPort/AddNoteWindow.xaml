<Window x:Class="PatPort.AddNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PatPort"
        mc:Ignorable="d"
        Title="Add Note" Height="250" Width="600">
    <Grid Background="LightBlue">
        <Button Name="saveButton" Click="saveButton_Click" Content="Save Note" HorizontalAlignment="Left" VerticalAlignment="Top" Width="138" Margin="118,189,0,0"/>
        <Button Name="cancelButton" Click="cancelButton_Click" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="138" Margin="329,189,0,0"/>
        <TextBox x:Name="noteTextBox" HorizontalAlignment="Left" Height="174" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="572"/>
    </Grid>
</Window>
